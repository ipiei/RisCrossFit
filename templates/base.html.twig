                }
                footer .social_media ul{
                    display: flex;
                    justify-content: center;
                    margin-bottom: 20px;
                }
                footer .social_media ul li a{
                    display: block;
                    margin: 0 5px;
                    color: #ffffff;
                    font-size: 30px;
                    width: 50px;
                    height: 50px;
                    outline: none;
                }
