            <style>
                /* ----------------------------- Import fonts from google font ----------------------------- */
                @import url('https://fonts.googleapis.com/css2?family=Lobster&family=Montserrat:wght@200;300;400;500;700;900&family=Open+Sans:wght@300;400;600;700;800&family=Roboto:wght@300;400;700;900&display=swap');
                /* -------------------- Global classes -------------------- */
                :root{
                    --bar-height: 55px;
                    --footer-height: 415.33px;
                    --color-green: #009579;
                    --color-green-glossy: #0affd2;
                    --primary-gradient: linear-gradient(to right, #4e4376, #2b5876);
                    --OpenSans: 'Open Sans', sans-serif;
                    --Montserrat: 'Montserrat', sans-serif;
                    --Lobster: 'Lobster', sans-serif;
                    --Roboto: 'Roboto', sans-serif;
                }
                *{
                    margin: 0;
                    padding: 0;
                    border: 0;
                    box-sizing: border-box;
                }
                body{
                    overflow-x: hidden;
                    position: relative;
                }
                a:hover{
                    text-decoration: none;
                }
                /* ----------x--------- Global classes ----------x--------- */
                /* ---------------------------- header ---------------------------- */
                header{
                    font-family: var(--Roboto);
                    top: 0;
                    left: 0;
                    /*position: fixed;*/
                    width: 100%;
                    text-transform: uppercase;
                    background-color: transparent;
                    padding: 16px 32px 16px 32px;
                    box-shadow: 0 1px 16px rgba(0, 0, 0, 0.9);
                    z-index: 100;
                    align-items: center;
                    justify-content: center;
                }
                .sticky{
                    background-color: #222222;
                    box-shadow: none;
                    z-index: 20;
                    transition: 0.4s ease-in-out;
                }
                nav ul{
                    margin: 0;
                    padding: 0;
                    transform: translateY(50%);
                }
                nav, nav li{
                    display: inline-block;
                }
                header img{
                    width: 100px;
                    margin: 0;
                    padding: 0;
                }
                header a{
                    outline: none;
                }
                nav{
                    display: inline-block;
                    /* line-height: 35px; */
                    vertical-align: top;
                }
                nav li{
                    margin-left: 25px;
                }
                nav li a{
                    text-decoration: none;
                    color: #ffffff;
                }
                nav li a:hover{
                    opacity: 0.6;
                    color: #ffffff;
                }
                .button-sign-in{
                    text-decoration: none;
                    color: #ffffff;
                    float: right;
                    justify-content: center;
                    align-items: center;
                    text-align: center;
                }
                .button-sign-in:hover{
                    color: #ffffff;
                    opacity: 0.6;
                    transition: all ease-in-out 150ms;
                }
                #hamburger, #hamburger-content{
                    display: inline;
                }
                #hamburger-content a{
                    align-items: center;
                    text-align: center;
                    justify-content: center;
                    margin-top: 4px;
                }
                #hamburger-content .fa-user-circle{
                    font-size: 35px;
                    padding: 0;
                    margin: 0;
                }
                #hamburger-button{
                    display: none;
                    background: none;
                    color: #ffffff;
                    border: none;
                    font-size: 30px;
                    padding: 0;
                    margin: 0;
                    float: right;
                    cursor: pointer;
                    outline-style: none;
                }
                #hamburger-button:hover{
                    opacity: 0.6;
                    transition: all ease-in-out 200ms;
                }
                #hamburger-overlay{
                    display: none; /* Masquer l'affichage */
                    position: fixed;
                    z-index: 10;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-color: rgba(0, 0, 0, 0.6);
                }
                #hamburger-sidebar{
                    display: none;
                    position: fixed;
                    width: 84%;
                    z-index: 20;
                    height: 100%;
                    top: 0;
                    left: 0;
                    background: #fdbd12;
                    transform: translateX(-100%);
                    transition: transform 0.2s ease-out;
                }
                #hamburger-sidebar li{
                    display: block;
                    margin-top: 20px;
                    margin-bottom: 20px;
                }
                #hamburger-sidebar-header{
                    background: url('evenement/build/images/NavImg.jpg') no-repeat center;
                    height: 430px;
                    background-size: cover;
                }
                #hamburger-sidebar-body{
                    padding: 16px 8px;
                }
                #hamburger-sidebar-body li:before{
                    content: ' ';
                    display: inline-block;
                    vertical-align: middle;
                    width: 26px;
                    height: 26px;
                    /* border: 1px solid red; */
                    margin-right: 16px;
                }
                #hamburger-sidebar-body li:first-child:before{
                    background-image: url('evenement/build/images/home.svg');
                    background-repeat: no-repeat;
                    background-position: center;
                    background-size: cover;
                }
                #hamburger-sidebar-body li:nth-child(2):before{
                    background-image: url('evenement/build/images/info.svg');
                    background-repeat: no-repeat;
                    background-position: center;
                    background-size: cover;
                }
                #hamburger-sidebar-body li:nth-child(3):before{
                    background-image: url('evenement/build/images/event.svg');
                    background-repeat: no-repeat;
                    background-position: center;
                    background-size: cover;
                }#hamburger-sidebar-body li:last-child:before{
                    background-image: url('evenement/build/images/email.svg');
                    background-repeat: no-repeat;
                    background-position: center;
                    background-size: cover;
                 }
                 #hamburger-sidebar-body .button{
                     float: none;
                     display: block;
                     text-align: center;
                     margin-top: 16px;
                     height: auto;
                     font-size: 32px;
                     line-height: inherit;
                 }
                #hamburger-sidebar-body .button:after{
                    content: 'Se connecter';
                    display: inline-block;
                    vertical-align: middle;
                    font-size: 16px;
                    /* border: 1px solid red; */
                    margin-left: 16px;
                }

                @media screen and (max-width: 1024px){
                    #hamburger-content{
                        display: none;
                    }
                    #hamburger-button, #hamburger-sidebar,
                    .hamburger-activated #hamburger-overlay{
                        display: block;
                    }
                    .hamburger-activated #hamburger-sidebar{
                        transform: translateX(0);
                    }
                }
